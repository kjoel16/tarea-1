**free
ctl-opt dftactgrp(*no) actgrp(*caller) option(*srcstmt:*nodebugio);

dcl-f TETDSPF workstn;

dcl-s msgLocal char(60) inz('Listo. F3=Salir  F4=Nuevo');

dou *in03;  // F3

  // pintar algo simple para probar que el DSPF est√° bien
  B01 = '[][][][][][][][][][]';
  B02 = '                ';
  MSG = msgLocal;

  write MAIN;
  read  MAIN;

  if *in04; // F4
     msgLocal = 'Nuevo (ok). Presiona F3 para salir.';
  endif;

enddo;

*inlr = *on;
return;