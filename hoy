using Microsoft.Extensions.DependencyInjection;
using Microsoft.Extensions.Hosting;
using Microsoft.Extensions.Logging;

namespace PinBuzonInteligente
{
    internal class Program
    {
        static void Main(string[] args)
        {
            CreateHostBuilder(args).Build().Run();
        }

        static IHostBuilder CreateHostBuilder(string[] args) =>
            Host.CreateDefaultBuilder(args)
                .UseWindowsService(options =>
                {
                    // Nombre que aparecerá en el Administrador de servicios de Windows
                    options.ServiceName = "PinBuzonInteligente";
                })
                .ConfigureServices((hostContext, services) =>
                {
                    // Registra la clase principal del servicio
                    services.AddHostedService<PingWorker>();
                })
                .ConfigureLogging(logging =>
                {
                    // Limpia cualquier proveedor anterior
                    logging.ClearProviders();

                    // Permite ver logs en consola (útil para debug local)
                    logging.AddConsole();

                    // Agrega el proveedor de Event Viewer
                    logging.AddEventLog(settings =>
                    {
                        // Nombre que se mostrará como "Origen" en el visor de eventos
                        settings.SourceName = "PinBuzonInteligente";

                        // Log estándar donde se escriben los eventos
                        settings.LogName = "Application";
                    });
                });
    }
}