package com.mycompany.logwriter.config;

import com.mycompany.logwriter.interceptor.LogInterceptor;
import jakarta.servlet.Filter;

import org.springframework.boot.autoconfigure.condition.ConditionalOnMissingBean;
import org.springframework.boot.web.servlet.FilterRegistrationBean;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.core.Ordered;
import org.springframework.web.servlet.config.annotation.InterceptorRegistry;
import org.springframework.web.servlet.config.annotation.WebMvcConfigurer;

@Configuration
public class LogAutoConfiguration implements WebMvcConfigurer {

    /**
     * Registra automáticamente el interceptor que captura:
     * - endpoint
     * - método
     * - IP
     * - tiempos
     * - status
     * y luego delega a LogWriterLib
     */
    @Override
    public void addInterceptors(InterceptorRegistry registry) {
        registry.addInterceptor(logInterceptor())
                .addPathPatterns("/**"); // intercepta TODO
    }

    @Bean
    @ConditionalOnMissingBean
    public LogInterceptor logInterceptor() {
        return new LogInterceptor();
    }

    /**
     * Filtro que envuelve request/response para poder leer
     * el JSON completo (entrada y salida) usando
     * ContentCachingRequestWrapper / ResponseWrapper.
     */
    @Bean
    @ConditionalOnMissingBean
    public FilterRegistrationBean<Filter> cachingFilter() {
        FilterRegistrationBean<Filter> bean = new FilterRegistrationBean<>();
        bean.setFilter(new CachingFilter());
        bean.addUrlPatterns("/*");
        bean.setName("log-writer-caching-filter");
        bean.setOrder(Ordered.HIGHEST_PRECEDENCE); // primero en la cadena
        return bean;
    }
}