<body>
  <div class="card">
    <div id="deviceBadge" class="pill">Detectando dispositivo…</div>
    <h1>Descarga la app</h1>
    <p>Presiona el botón para ir a la tienda correcta según tu dispositivo.</p>

    <button id="downloadBtn">Descargar</button>

    <!-- Fallback (si no es Android/iOS) -->
    <a id="iosBtn" class="btn secondary hidden"
       href="https://apps.apple.com/hn/app/davivienda/id1578380253"
       rel="noopener">Abrir App Store (iPhone)</a>

    <a id="androidBtn" class="btn secondary hidden"
       href="https://play.google.com/store/apps/details?id=com.davivienda.daviviendaapp&pcampaignid=web_share"
       rel="noopener">Abrir Google Play (Android)</a>

    <div class="note" id="note"></div>
  </div>

  <script>
    // LINKS
    const IOS_URL = "https://apps.apple.com/hn/app/davivienda/id1578380253";
    const ANDROID_URL = "https://play.google.com/store/apps/details?id=com.davivienda.daviviendaapp&pcampaignid=web_share";

    const btn = document.getElementById("downloadBtn");
    const badge = document.getElementById("deviceBadge");
    const note = document.getElementById("note");

    const iosBtn = document.getElementById("iosBtn");
    const androidBtn = document.getElementById("androidBtn");

    function detectOS() {
      // iOS detection moderno (incluye iPadOS que a veces reporta como Mac)
      const ua = navigator.userAgent || "";
      const platform = navigator.platform || "";
      const maxTouchPoints = navigator.maxTouchPoints || 0;

      const isAndroid = /Android/i.test(ua);

      const isiPhone = /iPhone/i.test(ua);
      const isiPad = /iPad/i.test(ua);

      // iPadOS 13+ puede verse como "MacIntel" pero con touch
      const isiPadOS = (platform === "MacIntel" && maxTouchPoints > 1);

      const isIOS = isiPhone || isiPad || isiPadOS;

      if (isAndroid) return "android";
      if (isIOS) return "ios";
      return "other";
    }

    const os = detectOS();

    if (os === "android") {
      badge.textContent = "Dispositivo detectado: Android";
      btn.textContent = "Descargar en Google Play";
    } else if (os === "ios") {
      badge.textContent = "Dispositivo detectado: iPhone / iOS";
      btn.textContent = "Descargar en App Store";
    } else {
      badge.textContent = "Dispositivo: No identificado (PC u otro)";
      btn.textContent = "Elegir tienda";
      note.textContent = "Si estás en PC, usa los botones de abajo para abrir la tienda correcta.";
      iosBtn.classList.remove("hidden");
      androidBtn.classList.remove("hidden");
    }

    btn.addEventListener("click", () => {
      if (os === "android") {
        window.location.href = ANDROID_URL;
      } else if (os === "ios") {
        window.location.href = IOS_URL;
      } else {
        // En otros dispositivos, no redirigimos de golpe; mostramos opciones
        iosBtn.classList.remove("hidden");
        androidBtn.classList.remove("hidden");
      }
    });
  </script>
</body>
</html>