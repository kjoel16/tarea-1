  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Descargar App Davivienda</title>
  <style>
    body {
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      margin: 0;
      padding: 0;
      background: #f6f7fb;
      color: #111;
      display: grid;
      place-items: center;
      min-height: 100vh;
    }
    .card {
      width: min(520px, 92vw);
      background: #fff;
      border-radius: 16px;
      padding: 22px;
      box-shadow: 0 10px 30px rgba(0,0,0,.08);
    }
    h1 { margin: 0 0 8px; font-size: 20px; }
    p { margin: 0 0 16px; line-height: 1.4; color: #333; }
    .pill {
      display: inline-block;
      font-size: 12px;
      padding: 6px 10px;
      border-radius: 999px;
      background: #eef2ff;
      color: #2b3a99;
      margin-bottom: 12px;
    }
    button, a.btn {
      width: 100%;
      border: 0;
      cursor: pointer;
      padding: 14px 16px;
      border-radius: 12px;
      font-size: 16px;
      font-weight: 600;
      background: #e3112c;
      color: #fff;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
    }
    button:active { transform: translateY(1px); }
    .secondary {
      background: #111;
      margin-top: 10px;
    }
    .hidden { display: none; }
    .note { margin-top: 12px; font-size: 12px; color: #666; }
  </style>
