using System.Collections.Generic;
using System.Text.Json.Serialization;

namespace TuProyecto.Alias.Dto
{
    public class AliasRequestDto
    {
        [JsonPropertyName("aliasValue")]
        public string AliasValue { get; set; }

        [JsonPropertyName("identification")]
        public IdentificationDto Identification { get; set; }

        [JsonPropertyName("profile")]
        public ProfileDto Profile { get; set; }

        [JsonPropertyName("aliasType")]
        public string AliasType { get; set; }

        [JsonPropertyName("externalId")]
        public string ExternalId { get; set; }

        [JsonPropertyName("paymentCredentials")]
        public List<PaymentCredentialDto> PaymentCredentials { get; set; }

        [JsonPropertyName("consent")]
        public ConsentDto Consent { get; set; }
    }
}