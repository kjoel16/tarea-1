using System.Globalization;
using System.Text;
using System.Text.RegularExpressions;

public static class As400Sanitizador
{
    public static string LimpiarParaAS400(string input)
    {
        if (string.IsNullOrWhiteSpace(input))
            return "";

        // 1. Normalizar para eliminar acentos
        string textoSinAcentos = input.Normalize(NormalizationForm.FormD);
        var sb = new StringBuilder();

        foreach (char c in textoSinAcentos)
        {
            UnicodeCategory cat = CharUnicodeInfo.GetUnicodeCategory(c);
            if (cat != UnicodeCategory.NonSpacingMark)
            {
                sb.Append(c);
            }
        }

        string limpio = sb.ToString();

        // 2. Eliminar caracteres no imprimibles o no ASCII
        limpio = Regex.Replace(limpio, @"[^a-zA-Z0-9\s\.,;:@#\-_]", "");

        // 3. Trim opcional
        return limpio.Trim();
    }
}